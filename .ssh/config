# -- TORQUE
Host *.dmz.internal.lecat.pro !adm.dmz.internal.lecat.pro
        ProxyJump adm.dmz.internal.lecat.pro

Host *.dce.internal.lecat.pro !adm.dce.internal.lecat.pro
        ProxyJump adm.dce.internal.lecat.pro

Host *.internal.lecat.pro *.iot.lecat.network adm.osc.lecat.network !*.*.internal.lecat.pro !adm-internal.internal.lecat.pro
	ProxyJump adm-internal.internal.lecat.pro

Host *.osc.lecat.network !adm.osc.lecat.network
	ProxyJump adm.osc.lecat.network

Host storage.internal.lecat.pro
	HostName storage-sec.internal.lecat.pro

Host storage-ltsp.internal.lecat.pro
	HostName storage-ltsp-sec.internal.lecat.pro

Host gw-*.internal.lecat.pro gw.*.internal.lecat.pro
	User vyos

Host storage*internal.lecat.pro
	User root

Host sw-*.internal.lecat.pro
	User root
	IdentityFile ~/.ssh/id_rsa_fw
	IdentitiesOnly yes
	Ciphers aes256-cbc
        KexAlgorithms diffie-hellman-group1-sha1
        HostKeyAlgorithms +ssh-dss

Host *.internal.lecat.pro *.lecat.network !sw-*.internal.lecat.pro
	User romain
	IdentityFile ~/.ssh/id_rsa	

# -- WORK
Host par1-* nj1-* hk1-* sv1-* par4-* nj2-* top1-* dshq1-* dv1-* dv2-*
        User romain.lecat
        IdentityFile ~/.ssh/id_rsa_outscale

Host par1-* !par1-adm !par1-salt-1 !par1-ops-* !par1-balabit-*
        ProxyJump par1-adm

Host par4-* !par4-adm
        ProxyJump par4-adm

Host in1-* !in1-adm
        ProxyJump in1-adm

Host in2-* !in2-adm
        ProxyJump in2-adm

Host sv1-* !sv1-adm
        ProxyJump sv1-adm

Host hk1-* !hk1-adm
        ProxyJump hk1-adm

Host hk2-* !hk2-adm
        ProxyJump hk2-adm

Host nj1-* !nj1-adm
        ProxyJump nj1-adm

Host nj2-* !nj2-adm
        ProxyJump nj2-adm

Host top1-* !top1-adm
        ProxyJump top1-adm

Host dshq1-* !dshq1-adm-2
        ProxyJump dshq1-adm-2

Host dv1-* dv2-* !dv1-adm
        ProxyJump dv1-adm


# -- GENERIC
Host *
	ForwardAgent yes
        AddKeysToAgent yes
	UseKeychain yes
	StrictHostKeyChecking no
	HashKnownHosts no
