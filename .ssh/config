# -- TORQUE
Host *.dmz.home.lecat.network !adm.dmz.home.lecat.network
	ProxyJump adm.dmz.home.lecat.network

Host *.internal.lecat.pro *.secure.home.lecat.network *.iot.home.lecat.network !adm.secure.home.lecat.network
	ProxyJump adm.secure.home.lecat.network

Host *.osc.lecat.network !adm.secure.osc.lecat.network
	ProxyJump adm.secure.osc.lecat.network

Host *.osc-us.lecat.network !adm.secure.osc-us.lecat.network
	ProxyJump adm.secure.osc-us.lecat.network

Host *.osc-jp.lecat.network !adm.secure.osc-jp.lecat.network
	ProxyJump adm.secure.osc-jp.lecat.network

Host sw-*.secure.home.lecat.network
	IdentityAgent no
	IdentityFile ~/.ssh/id_rsa_fw
	IdentitiesOnly yes
	Ciphers aes256-ctr,aes256-cbc
	KexAlgorithms +diffie-hellman-group1-sha1
	HostKeyAlgorithms +ssh-dss

Host swarm*.home.lecat.network zabbix-proxy.dmz.home.lecat.network
	User core
	IdentityFile ~/.ssh/id_rsa_swarm
	IdentityAgent no

Host gw-osc*.transit.home.lecat.network gw-transit-*.transit.vultr.lecat.network
	User vyos
	IdentityFile ~/.ssh/id_rsa_fw
	IdentityAgent no

Host gw*.transit.*.lecat.network rr*.secure.*.lecat.network
	User admin
	IdentityFile ~/.ssh/id_rsa_fw
	IdentityAgent no

Host sw-*.secure.home.lecat.network sw-*.internal.lecat.pro
	User root
	IdentityFile ~/.ssh/id_rsa_fw
	IdentityAgent no

Host san.secure.home.lecat.network esxi*.secure.home.lecat.network vcenter*.secure.home.lecat.network
	User root

Host ap-*.secure.home.lecat.network
	User prdadm
	IdentityFile ~/.ssh/id_rsa_fw
	IdentityAgent no

Host *.lecat.pro *.lecat.network !sw-*
	User romain
	IdentityFile ~/.ssh/id_rsa
	CertificateFile ~/.ssh/id_rsa-cert.pub

# -- ANIGME
Host *.internal.anigme.io
	ProxyJump adm.admin.anigme.io

Host *.anigme.io
	User outscale
	IdentityFile ~/.ssh/id_rsa_anigme

# -- WORK
Host par1-* nj1-* hk1-* sv1-* par4-* nj2-* jpn1-* jpn2-* top1-* dshq1-* dv1-* dv2-* in1-* in2-* sec1-* sec2-* *.outscale.internal *.admin
	User romain.lecat
	IdentityFile ~/.ssh/id_rsa_outscale

